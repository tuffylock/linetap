<!DOCTYPE html>
<html>
<head>
  <title>LineTap</title>

  <%= render 'favicon' %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div temp="header">
    <a href="https://github.com/tuffylock/linetap">linetap#github</a>

    <% if current_user %>
      <%= current_user.username %>
      <%= link_to "log out", session_url, method: :delete %>
    <% else %>
      <%= link_to "register", new_user_url %>
      <%= link_to "log in", new_session_url %>
    <% end %>
  </div>

  <div temp="errors">
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
